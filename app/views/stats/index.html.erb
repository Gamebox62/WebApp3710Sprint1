<p style="color: green"><%= notice %></p>

<h1>Stats</h1>

<div id="stats">
  <% @stats.each do |stat| %>
    <%= render stat %>
    <p>
      <%= link_to "Show this stat", stat %>
    </p>
  <% end %>
</div>
<%= javascript_include_tag "application" %>

<div>
  <canvas id="solutionsChart" 
          data-solutions="<%= @solutions.to_json %>" 
          data-labels="<%= @labels.to_json %>"></canvas>
</div>
<%= link_to "New stat", new_stat_path %>
